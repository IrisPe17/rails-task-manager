<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed %>
    <h3>
      [x] - <%= link_to task.title, task_path(task) %>
    </h3>
  <% else %>
    <h3>
      [ ] - <%= link_to task.title, task_path(task) %>
    </h3>
  <% end %>  
<% end %>

<p><%= link_to "+ Add a new task", new_task_path %></p>